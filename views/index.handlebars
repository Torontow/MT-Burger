<div class="container">
    <div class="row align-items-start">

        <!--Column which displays all burgers currenly in database.-->
        <div class="col-4">
            <h2>My Menu</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block willEat=true}}
                {{/unless}}
                {{/each}}
            </ul>

        </div>

        <!--Column which shows burger image and option to add burgers to my menu.-->
        <div class="col-4">
            <img src="/assets/img/burger.png" alt="hamburger" class="burger-img">
            <h1>Eat-Da-Burger!</h1>
            <h4>SOOOO many different burgers out there! Keep track of the ones you want, AND the ones you've tried!</h4>
            <form id="create-form">

                <div class="form-group">
                    <label for="burger-name">Burger Name:</label>
                    <input type="text" id="burger-name" name="name" placeholder="Whatcha wanna eat?">
                </div>
                <button type="submit" id="devoured-btn" value="0">Add Burger</button>
            </form>
        </div>

        <!--Column which contains burgers user has tried.-->
        <div class="col-4">
            <h2>What I Ate</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block}}
                {{/if}}
                {{/each}}
            </ul>


        </div>
    </div>
</div>